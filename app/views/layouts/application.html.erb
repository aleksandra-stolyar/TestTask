<!DOCTYPE html>
<html>
  <head>
    <title>TestTask</title>
    <base href="/products">
    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>
    <%= csrf_meta_tags %>
  </head>
  <body ng-app="spaTask">
    <div class="header">
      <div class="row">
        <div class="account-menu">
          <div ng-include="'navbar/_navbar.html'"></div>
        </div>
      </div>
    </div>
    <div class="container content">
      <div class="row">
        <div class="col-md-6 col-md-offset-3 messages-container">
          <flash-message duration="5000" show-close="true"></flash-message>
        </div>
      </div>

      <div class="row">
        <div class="col-md-12">
          <div ui-view></div>
        </div>
      </div>
    </div>
  </body>
</html>
